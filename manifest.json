{
  "author": "Aranda R. Soedjono",
  "manifest_version": 2,
  "name": "Daily Helper",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["jira.js"],
      "matches": ["https://*.atlassian.net/browse/*"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
